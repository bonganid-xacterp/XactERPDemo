# ==============================================================
# FGLPROFILE Configuration for XACT ERP Demo
# PostgreSQL Database Configuration
# ==============================================================

# Database provider
dbi.database.provider = "dbmpgs"
dbi.database.demoappdb.source = "dbname=demoappdb host=localhost port=5432 user=postgres password=napoleon"

# ============================================================
# Style Configuration
# ============================================================
ui.style = "${ProjectDir}/src/_main/main_styles.4st"

# Optional: load multiple style files (base + overrides)
# ui.style = "${ProjectDir}/src/_main/main_styles.4st; ${ProjectDir}/src/resources/xact_erp_sap.4st"

# ============================================================
# Debugging
# ============================================================
dbi.debug.level = 10
dbi.debug.file  = "database_debug.log"

# ============================================================
# Other Genero settings
# ============================================================
fgl.profile.version = "3.20"
