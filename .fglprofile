# ==============================================================
# FGLPROFILE Configuration for XACT ERP Demo
# PostgreSQL Database Configuration
# ==============================================================

# Database provider
 dbi.database.provider = "dbmpgs"

# PostgreSQL Connection
dbi.database.xactapp_db.source = "dbname=xactapp_db host=localhost port=5432 user=postgres password=napoleon"

# Style configuration
fglrun.universalClientStyleSheet = "$FGLDIR/_main/main_styles.4st"


# Debugging (optional)
 dbi.debug.level = 10
 dbi.debug.file = "database_debug.log"

# Connection pool settings (optional)
dbi.database.xactapp_db.pool.minSize = 1
dbi.database.xactapp_db.pool.maxSize = 10
dbi.database.xactapp_db.pool.timeout = 30

